<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:text="File Name"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OBJ"
            android:id="@+id/checkBox"
            android:checked="false" android:layout_below="@+id/editText" android:layout_alignParentStart="true"
            android:layout_marginTop="63dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="STL"
            android:id="@+id/checkBox2"
            android:checked="false"
            android:layout_alignTop="@+id/checkBox" android:layout_alignStart="@+id/button"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save and Export"
            android:id="@+id/button" android:layout_below="@+id/checkBox2" android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"/>
    <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PDF"
            android:id="@+id/checkBox3"
            android:checked="false" android:layout_alignTop="@+id/checkBox2" android:layout_toRightOf="@+id/checkBox2"
            android:layout_marginLeft="59dp"/>
</RelativeLayout>